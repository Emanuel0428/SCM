---
import "../styles/global.css";
import Sidebar from "../components/Sidebar.astro";
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>SCM - Control Inventario </title>
	</head>
			<body class="bg-gradient-to-br from-blue-50 to-white min-h-screen flex flex-col md:flex-row">
				<div class="flex-none md:block z-30">
					<slot name="sidebar">
						<Sidebar />
					</slot>
				</div>
				<main class="flex-1 md:ml-4 p-4 md:p-6 lg:p-8 transition-all duration-300 overflow-x-hidden">
					<div class="w-full mx-auto">
						<slot />
					</div>
				</main>
			</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
