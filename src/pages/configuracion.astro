    }

    renderUsuarios();

    // Cambiar mi rol
    document.getElementById('btn-cambiar-rol')?.addEventListener('click', () => {
      const select = document.getElementById('mi-rol') as HTMLSelectElement;
      const nuevoRol = select.value;
      showSuccess(`Tu rol ha sido cambiado a: ${nuevoRol}. Esta es una simulaciÃ³n. En producciÃ³n, esto requerirÃ­a permisos especiales.`);
    });

    // Valores por defecto
    const perfilDefault = {
      nombre_completo: '',
      email: '',
      telefono: '',
      cargo: ''
    };

    const empresaDefault = {
      nombre: '',
      nit: '',
      direccion: '',
      ciudad: '',
      pais: 'CO'
    };

    // FunciÃ³n para cargar datos del perfil
    function cargarPerfil() {
      const perfilGuardado = localStorage.getItem('scm_perfil_usuario');
      let perfil = perfilDefault;
      
      if (perfilGuardado) {
        try {
          perfil = JSON.parse(perfilGuardado);
        } catch (err) {
          console.error('Error al cargar perfil:', err);
        }
      }
      
      (document.getElementById('nombre-completo') as HTMLInputElement).value = perfil.nombre_completo || '';
      (document.getElementById('email') as HTMLInputElement).value = perfil.email || '';
      (document.getElementById('telefono') as HTMLInputElement).value = perfil.telefono || '';
      (document.getElementById('cargo') as HTMLInputElement).value = perfil.cargo || '';
    }

    // FunciÃ³n para cargar datos de la empresa
    function cargarMiEmpresa() {
      const empresaGuardada = localStorage.getItem('scm_mi_empresa');
      let empresa = empresaDefault;
      
      if (empresaGuardada) {
        try {
          empresa = JSON.parse(empresaGuardada);
        } catch (err) {
          console.error('Error al cargar empresa:', err);
        }
      }
      
      (document.getElementById('nombre-empresa') as HTMLInputElement).value = empresa.nombre || '';
      (document.getElementById('nit') as HTMLInputElement).value = empresa.nit || '';
      (document.getElementById('direccion') as HTMLInputElement).value = empresa.direccion || '';
      (document.getElementById('ciudad') as HTMLInputElement).value = empresa.ciudad || '';
      (document.getElementById('pais') as HTMLSelectElement).value = empresa.pais || 'CO';
    }

    // FunciÃ³n para cargar notificaciones
    function cargarNotificaciones() {
      const notifGuardadas = localStorage.getItem('scm_notificaciones');
      let notif = {
        stockBajo: true,
        movimientos: true,
        garantias: false
      };

      if (notifGuardadas) {
        try {
          notif = JSON.parse(notifGuardadas);
        } catch (err) {
          console.error('Error al cargar notificaciones:', err);
        }
      }

      (document.getElementById('notif-stock-bajo') as HTMLInputElement).checked = notif.stockBajo || false;
      (document.getElementById('notif-movimientos') as HTMLInputElement).checked = notif.movimientos || false;
      (document.getElementById('notif-garantias') as HTMLInputElement).checked = notif.garantias || false;
    }

    // Cargar datos al iniciar
    cargarPerfil();
    cargarMiEmpresa();
    cargarNotificaciones();

    // Form handlers
    document.getElementById('form-perfil')?.addEventListener('submit', (e) => {
      e.preventDefault();
      
      const perfil = {
        nombre_completo: (document.getElementById('nombre-completo') as HTMLInputElement).value.trim(),
        email: (document.getElementById('email') as HTMLInputElement).value.trim(),
        telefono: (document.getElementById('telefono') as HTMLInputElement).value.trim(),
        cargo: (document.getElementById('cargo') as HTMLInputElement).value.trim()
      };

      // Validar campos requeridos
      if (!perfil.nombre_completo || !perfil.email) {
        showError('Por favor completa los campos obligatorios');
        return;
      }

      // Guardar en localStorage
      localStorage.setItem('scm_perfil_usuario', JSON.stringify(perfil));
      showSuccess('Perfil actualizado correctamente');
    });

    // BotÃ³n restablecer perfil
    document.getElementById('btn-restablecer-perfil')?.addEventListener('click', () => {
      showConfirm('Â¿EstÃ¡s seguro de restablecer los datos del perfil? Se cargarÃ¡n los Ãºltimos datos guardados.', () => {
        cargarPerfil();
        showSuccess('Datos del perfil restablecidos');
      });
    });

    document.getElementById('form-empresa')?.addEventListener('submit', (e) => {
      e.preventDefault();
      
      const nombre = (document.getElementById('nombre-empresa') as HTMLInputElement).value.trim();
      const nit = (document.getElementById('nit') as HTMLInputElement).value.trim();
      const direccion = (document.getElementById('direccion') as HTMLInputElement).value.trim();
      const ciudad = (document.getElementById('ciudad') as HTMLInputElement).value.trim();
      const pais = (document.getElementById('pais') as HTMLSelectElement).value;

      // Validar campos requeridos
      if (!nombre || !nit) {
        showError('Por favor completa los campos obligatorios');
        return;
      }

      // Obtener o crear ID de empresa actual
      let empresaActualId = localStorage.getItem('scm_mi_empresa_id');
      
      // Obtener lista de empresas
      const empresas = JSON.parse(localStorage.getItem('scm_empresas') || '[]');
      
      if (empresaActualId) {
        // Actualizar empresa existente
        const index = empresas.findIndex((e: any) => e.id === empresaActualId);
        if (index !== -1) {
          empresas[index] = {
            id: empresaActualId,
            nombre,
            nit,
            nit_norm: nit.replace(/[^0-9]/g, '')
          };
        } else {
          // Si no se encuentra, crear nueva
          empresaActualId = Date.now().toString();
          empresas.push({
            id: empresaActualId,
            nombre,
            nit,
            nit_norm: nit.replace(/[^0-9]/g, '')
          });
          localStorage.setItem('scm_mi_empresa_id', empresaActualId);
        }
      } else {
        // Crear nueva empresa
        empresaActualId = Date.now().toString();
        empresas.push({
          id: empresaActualId,
          nombre,
          nit,
          nit_norm: nit.replace(/[^0-9]/g, '')
        });
        localStorage.setItem('scm_mi_empresa_id', empresaActualId);
      }

      // Guardar empresas actualizadas
      localStorage.setItem('scm_empresas', JSON.stringify(empresas));

      // Guardar datos adicionales de Mi Empresa
      localStorage.setItem('scm_mi_empresa', JSON.stringify({
        nombre,
        nit,
        direccion,
        ciudad,
        pais
      }));

      // Notificar cambios
      window.dispatchEvent(new CustomEvent('scm-data-changed', { detail: { key: 'scm_empresas' } }));

      showSuccess('InformaciÃ³n de empresa actualizada correctamente');
    });

    // Guardar preferencias de notificaciones
    document.getElementById('btn-guardar-notificaciones')?.addEventListener('click', () => {
      const notif = {
        stockBajo: (document.getElementById('notif-stock-bajo') as HTMLInputElement).checked,
        movimientos: (document.getElementById('notif-movimientos') as HTMLInputElement).checked,
        garantias: (document.getElementById('notif-garantias') as HTMLInputElement).checked
      };

      localStorage.setItem('scm_notificaciones', JSON.stringify(notif));
      showSuccess('Preferencias de notificaciones guardadas correctamente');
    });

    // Limpiar cachÃ©
    document.getElementById('btn-limpiar-cache')?.addEventListener('click', () => {
      showConfirm('Â¿EstÃ¡s seguro de limpiar el cachÃ©? Esto puede eliminar datos temporales.', () => {
        showSuccess('CachÃ© limpiado correctamente');
      });
    });

    // Exportar datos
    document.getElementById('btn-exportar-datos')?.addEventListener('click', () => {
      const data = {
        activos: JSON.parse(localStorage.getItem('scm_activos') || '[]'),
        movimientos: JSON.parse(localStorage.getItem('scm_movimientos') || '[]'),
        variantes: JSON.parse(localStorage.getItem('scm_variantes') || '[]'),
        modelos: JSON.parse(localStorage.getItem('scm_modelos') || '[]'),
        marcas: JSON.parse(localStorage.getItem('scm_marcas') || '[]'),
        empresas: JSON.parse(localStorage.getItem('scm_empresas') || '[]'),
        sedes: JSON.parse(localStorage.getItem('scm_sedes') || '[]'),
        usuarios: JSON.parse(localStorage.getItem('scm_usuarios') || '[]'),
        perfil: JSON.parse(localStorage.getItem('scm_perfil_usuario') || 'null'),
        miEmpresa: JSON.parse(localStorage.getItem('scm_mi_empresa') || 'null'),
        notificaciones: JSON.parse(localStorage.getItem('scm_notificaciones') || 'null')
      };
      
      const dataStr = JSON.stringify(data, null, 2);
      const dataBlob = new Blob([dataStr], { type: 'application/json' });
      const url = URL.createObjectURL(dataBlob);
      const link = document.createElement('a');
      link.href = url;
      link.download = `scm-backup-${new Date().toISOString().split('T')[0]}.json`;
      link.click();
      
      showSuccess('Datos exportados correctamente');
    });

    // Reset datos
    document.getElementById('btn-reset-datos')?.addEventListener('click', () => {
      showConfirm('âš ï¸ ADVERTENCIA: Esto eliminarÃ¡ todos los datos actuales y restaurarÃ¡ los datos de prueba iniciales. Â¿EstÃ¡s seguro?', () => {
        // Limpiar todos los datos
        localStorage.removeItem('scm_activos');
        localStorage.removeItem('scm_movimientos');
        localStorage.removeItem('scm_variantes');
        localStorage.removeItem('scm_usuarios');
        localStorage.removeItem('scm_empresas');
        localStorage.removeItem('scm_sedes');
        localStorage.removeItem('scm_modelos');
        localStorage.removeItem('scm_marcas');
        localStorage.removeItem('scm_politicas');
        localStorage.removeItem('scm_perfil_usuario');
        localStorage.removeItem('scm_mi_empresa');
        localStorage.removeItem('scm_mi_empresa_id');
        localStorage.removeItem('scm_notificaciones');
        showSuccess('Datos reseteados. La pÃ¡gina se recargarÃ¡.');
        setTimeout(() => window.location.reload(), 1000);
      });
    });
  </script>
