                placeholder="correo@ejemplo.com"
              />
            </div>

            <div class="flex flex-col">
              <label class="font-semibold text-blue-900 mb-2">TelÃ©fono</label>
              <input 
                type="text"
                id="telefono"
                class="border-2 border-gray-300 rounded-lg px-4 py-3 focus:ring-2 focus:ring-blue-400 outline-none transition hover:border-gray-400"
                placeholder="+57 300 000 0000"
              />
            </div>

            <div class="flex flex-col">
              <label class="font-semibold text-blue-900 mb-2">Cargo</label>
              <input 
                type="text"
                id="cargo"
                class="border-2 border-gray-300 rounded-lg px-4 py-3 focus:ring-2 focus:ring-blue-400 outline-none transition hover:border-gray-400"
                placeholder="Ej: Gerente, Analista, etc."
              />
            </div>

            <div class="col-span-full flex gap-4">
              <button type="submit" class="bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 font-semibold transition shadow-md">
                Guardar Cambios
              </button>
              <button type="button" id="btn-restablecer-perfil" class="bg-gray-500 text-white px-6 py-3 rounded-lg hover:bg-gray-600 font-semibold transition shadow-md">
                Restablecer
              </button>
            </div>
          </form>
        </div>

        <!-- Tab: Mi Empresa -->
        <div id="content-empresa" class="tab-content hidden">
          <h2 class="text-2xl font-bold text-blue-900 mb-6">InformaciÃ³n de Mi Empresa</h2>
          <form id="form-empresa" class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="flex flex-col">
              <label class="font-semibold text-blue-900 mb-2">Nombre de la Empresa <span class="text-red-500">*</span></label>
              <input 
                type="text"
                id="nombre-empresa"
                required
                class="border-2 border-gray-300 rounded-lg px-4 py-3 focus:ring-2 focus:ring-blue-400 outline-none transition hover:border-gray-400"
                placeholder="Nombre de tu empresa"
              />
            </div>

            <div class="flex flex-col">
              <label class="font-semibold text-blue-900 mb-2">NIT <span class="text-red-500">*</span></label>
              <input 
                type="text"
                id="nit"
                required
                class="border-2 border-gray-300 rounded-lg px-4 py-3 focus:ring-2 focus:ring-blue-400 outline-none transition hover:border-gray-400"
                placeholder="123456789-0"
              />
            </div>

            <div class="flex flex-col col-span-full">
              <label class="font-semibold text-blue-900 mb-2">DirecciÃ³n</label>
              <input 
                type="text"
                id="direccion"
                class="border-2 border-gray-300 rounded-lg px-4 py-3 focus:ring-2 focus:ring-blue-400 outline-none transition hover:border-gray-400"
                placeholder="Calle 123 #45-67"
              />
            </div>

            <div class="flex flex-col">
              <label class="font-semibold text-blue-900 mb-2">Ciudad</label>
              <input 
                type="text"
                id="ciudad"
                class="border-2 border-gray-300 rounded-lg px-4 py-3 focus:ring-2 focus:ring-blue-400 outline-none transition hover:border-gray-400"
                placeholder="Ciudad"
              />
            </div>

            <div class="flex flex-col">
              <label class="font-semibold text-blue-900 mb-2">PaÃ­s</label>
              <select 
                id="pais"
                class="border-2 border-gray-300 rounded-lg px-4 py-3 focus:ring-2 focus:ring-blue-400 outline-none transition hover:border-gray-400"
              >
                <option value="CO">Colombia</option>
                <option value="MX">MÃ©xico</option>
                <option value="AR">Argentina</option>
                <option value="CL">Chile</option>
                <option value="PE">PerÃº</option>
              </select>
            </div>

            <div class="col-span-full flex gap-4">
              <button type="submit" class="bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 font-semibold transition shadow-md">
                Guardar Cambios
              </button>
            </div>
          </form>
        </div>

        <!-- Tab: GestiÃ³n de Empresas -->
        <div id="content-empresas" class="tab-content hidden">
          <EmpresasCRUD />
        </div>

        <!-- Tab: Roles y Permisos -->
        <div id="content-roles" class="tab-content hidden">
          <h2 class="text-2xl font-bold text-blue-900 mb-6">GestiÃ³n de Roles y Permisos</h2>
          
          <!-- Mi Rol Actual -->
          <div class="bg-blue-50 border-2 border-blue-200 rounded-lg p-4 mb-6">
            <div class="flex items-center gap-3 mb-2">
              <span class="text-2xl">ğŸ‘¤</span>
              <div>
                <p class="font-bold text-blue-900">Tu Rol Actual</p>
                <p class="text-blue-700 text-sm">Este es el rol asignado a tu cuenta</p>
              </div>
            </div>
            <div class="mt-3 flex items-center gap-4">
              <select 
                id="mi-rol"
                class="border-2 border-gray-300 rounded-lg px-4 py-3 focus:ring-2 focus:ring-blue-400 outline-none transition hover:border-gray-400 bg-white"
              >
                <option value="ADMIN">ğŸ‘‘ Administrador</option>
                <option value="GESTOR">ğŸ“Š Gestor</option>
                <option value="CONSULTOR">ğŸ‘ï¸ Consultor</option>
                <option value="OPERADOR">ğŸ”§ Operador</option>
              </select>
              <button id="btn-cambiar-rol" class="bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 font-semibold transition shadow-md">
                Cambiar Rol
              </button>
            </div>
          </div>

          <!-- Lista de Usuarios y Sus Roles -->
          <h3 class="text-xl font-bold text-blue-900 mb-4">Usuarios del Sistema</h3>
          <div class="overflow-x-auto rounded-lg shadow-md">
            <table class="min-w-full bg-white divide-y divide-gray-200">
              <thead class="bg-gradient-to-r from-blue-600 to-blue-400 text-white">
                <tr>
                  <th class="px-6 py-3 text-left text-sm font-semibold">Usuario</th>
                  <th class="px-6 py-3 text-left text-sm font-semibold">Email</th>
                  <th class="px-6 py-3 text-left text-sm font-semibold">Rol Actual</th>
                  <th class="px-6 py-3 text-left text-sm font-semibold">Acciones</th>
                </tr>
              </thead>
              <tbody id="tabla-usuarios" class="divide-y divide-gray-200">
                <!-- Se llenarÃ¡ dinÃ¡micamente -->
              </tbody>
            </table>
          </div>

          <!-- DescripciÃ³n de Roles -->
          <div class="mt-8 grid grid-cols-1 md:grid-cols-2 gap-4">
            <div class="bg-purple-50 border-2 border-purple-200 rounded-lg p-4">
              <h4 class="font-bold text-purple-900 mb-2">ğŸ‘‘ Administrador</h4>
              <p class="text-sm text-purple-700">Acceso total al sistema. Puede gestionar usuarios, configuraciÃ³n y todos los mÃ³dulos.</p>
            </div>
            <div class="bg-green-50 border-2 border-green-200 rounded-lg p-4">
              <h4 class="font-bold text-green-900 mb-2">ğŸ“Š Gestor</h4>
              <p class="text-sm text-green-700">Puede crear, editar y eliminar registros. Genera reportes y gestiona inventario.</p>
            </div>
            <div class="bg-blue-50 border-2 border-blue-200 rounded-lg p-4">
              <h4 class="font-bold text-blue-900 mb-2">ğŸ‘ï¸ Consultor</h4>
              <p class="text-sm text-blue-700">Solo lectura. Puede ver informaciÃ³n y generar reportes bÃ¡sicos.</p>
            </div>
            <div class="bg-orange-50 border-2 border-orange-200 rounded-lg p-4">
              <h4 class="font-bold text-orange-900 mb-2">ğŸ”§ Operador</h4>
              <p class="text-sm text-orange-700">Puede registrar movimientos y actualizar estados de inventario.</p>
            </div>
          </div>
        </div>

        <!-- Tab: Sistema -->
        <div id="content-sistema" class="tab-content hidden">
          <h2 class="text-2xl font-bold text-blue-900 mb-6">ConfiguraciÃ³n del Sistema</h2>
          
          <div class="space-y-6">
            <!-- Notificaciones -->
            <div class="bg-white border-2 border-gray-200 rounded-lg p-6">
              <h3 class="text-lg font-bold text-blue-900 mb-4">ğŸ”” Notificaciones</h3>
              <div class="space-y-3">
                <label class="flex items-center gap-3 cursor-pointer">
                  <input type="checkbox" id="notif-stock-bajo" class="w-5 h-5 text-blue-600 rounded focus:ring-2 focus:ring-blue-400">
                  <span class="text-gray-700">Notificar cuando el stock sea bajo</span>
                </label>
                <label class="flex items-center gap-3 cursor-pointer">
                  <input type="checkbox" id="notif-movimientos" class="w-5 h-5 text-blue-600 rounded focus:ring-2 focus:ring-blue-400">
                  <span class="text-gray-700">Notificar movimientos de inventario</span>
                </label>
                <label class="flex items-center gap-3 cursor-pointer">
                  <input type="checkbox" id="notif-garantias" class="w-5 h-5 text-blue-600 rounded focus:ring-2 focus:ring-blue-400">
                  <span class="text-gray-700">Notificar vencimiento de garantÃ­as</span>
                </label>
              </div>
              <div class="mt-4">
                <button id="btn-guardar-notificaciones" class="bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 font-semibold transition shadow-md">
                  Guardar Preferencias
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
  </div>

  <!-- Modal de Ã©xito -->
  <div id="modal-config-success" class="fixed inset-0 bg-black bg-opacity-40 hidden items-center justify-center z-50">
    <div class="bg-white rounded-xl p-8 max-w-sm w-full mx-4 text-center shadow-2xl relative">
      <div class="text-green-600 text-5xl mb-4">âœ“</div>
      <h3 class="text-xl font-bold text-blue-900 mb-2">Â¡Ã‰xito!</h3>
      <p id="modal-config-success-msg" class="text-gray-700 mb-6">OperaciÃ³n completada correctamente.</p>
      <button id="modal-config-success-ok" class="bg-green-600 text-white px-6 py-3 rounded-lg hover:bg-green-700 font-semibold transition">
        Aceptar
      </button>
    </div>
  </div>

  <!-- Modal de error -->
  <div id="modal-config-error" class="fixed inset-0 bg-black bg-opacity-40 hidden items-center justify-center z-50">
    <div class="bg-white rounded-xl p-8 max-w-sm w-full mx-4 text-center shadow-2xl relative">
      <div class="text-red-600 text-5xl mb-4">âœ•</div>
      <h3 class="text-xl font-bold text-blue-900 mb-2">Error</h3>
      <p id="modal-config-error-msg" class="text-gray-700 mb-6">Ha ocurrido un error.</p>
      <button id="modal-config-error-ok" class="bg-red-600 text-white px-6 py-3 rounded-lg hover:bg-red-700 font-semibold transition">
        Aceptar
      </button>
    </div>
  </div>

  <!-- Modal de confirmaciÃ³n -->
  <div id="modal-config-confirm" class="fixed inset-0 bg-black bg-opacity-40 hidden items-center justify-center z-50">
    <div class="bg-white rounded-xl p-8 max-w-md w-full mx-4 text-center shadow-2xl relative">
      <div class="text-yellow-600 text-5xl mb-4">âš ï¸</div>
      <h3 class="text-xl font-bold text-blue-900 mb-2">ConfirmaciÃ³n</h3>
      <p id="modal-config-confirm-msg" class="text-gray-700 mb-6">Â¿EstÃ¡s seguro de realizar esta acciÃ³n?</p>
      <div class="flex gap-4">
        <button id="modal-config-confirm-yes" class="flex-1 bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 font-semibold transition">
          SÃ­, continuar
        </button>
        <button id="modal-config-confirm-no" class="flex-1 bg-gray-500 text-white px-6 py-3 rounded-lg hover:bg-gray-600 font-semibold transition">
          Cancelar
        </button>
      </div>
    </div>
  </div>

  <!-- Modal para editar rol de usuario -->
  <div id="modal-editar-rol" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50">
    <div class="bg-white rounded-xl p-8 max-w-md w-full mx-4 shadow-2xl relative">
      <button id="modal-editar-rol-close" class="absolute top-4 right-4 text-gray-500 hover:text-gray-700 text-2xl font-bold">Ã—</button>
      
      <h3 class="text-2xl font-bold text-blue-900 mb-6">Cambiar Rol de Usuario</h3>
      
      <form id="form-editar-rol" class="space-y-4">
        <input type="hidden" id="editar-rol-usuario-id" />
        
        <div>
          <label class="block text-sm font-semibold text-blue-900 mb-2">
            Usuario
          </label>
          <input 
            type="text" 
            id="editar-rol-usuario-nombre" 
            readonly
            class="w-full border-2 border-gray-300 rounded-lg px-4 py-3 bg-gray-100"
          />
        </div>

        <div>
          <label class="block text-sm font-semibold text-blue-900 mb-2">
            Rol <span class="text-red-500">*</span>
          </label>
          <select 
            id="editar-rol-nuevo-rol" 
            required
            class="w-full border-2 border-gray-300 rounded-lg px-4 py-3 focus:ring-2 focus:ring-blue-400 outline-none transition hover:border-gray-400 bg-white"
          >
            <option value="ADMIN">ğŸ‘‘ Administrador</option>
            <option value="GESTOR">ğŸ“Š Gestor</option>
            <option value="CONSULTOR">ğŸ‘ï¸ Consultor</option>
            <option value="OPERADOR">ğŸ”§ Operador</option>
          </select>
        </div>

        <div class="flex gap-4 mt-6">
          <button 
            type="submit" 
            class="flex-1 bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 font-semibold transition shadow-md"
          >
            Guardar Cambios
          </button>
          <button 
            type="button" 
            id="btn-cancelar-editar-rol"
            class="flex-1 bg-gray-500 text-white px-6 py-3 rounded-lg hover:bg-gray-600 font-semibold transition shadow-md"
          >
            Cancelar
          </button>
        </div>
      </form>
    </div>
  </div>

  <script>
    // Funciones para modales
    function showSuccess(mensaje: string) {
      const modal = document.getElementById('modal-config-success');
      const msgEl = document.getElementById('modal-config-success-msg');
      if (modal && msgEl) {
        msgEl.textContent = mensaje;
        modal.classList.remove('hidden');
        modal.classList.add('flex');
        setTimeout(() => {
          modal.classList.add('hidden');
          modal.classList.remove('flex');
        }, 2500);
      }
    }

    function showError(mensaje: string) {
      const modal = document.getElementById('modal-config-error');
      const msgEl = document.getElementById('modal-config-error-msg');
      if (modal && msgEl) {
        msgEl.textContent = mensaje;
        modal.classList.remove('hidden');
        modal.classList.add('flex');
      }
    }

    let confirmCallback: (() => void) | null = null;

    function showConfirm(mensaje: string, callback: () => void) {
      const modal = document.getElementById('modal-config-confirm');
      const msgEl = document.getElementById('modal-config-confirm-msg');
      if (modal && msgEl) {
        msgEl.textContent = mensaje;
        modal.classList.remove('hidden');
        modal.classList.add('flex');
        confirmCallback = callback;
      }
    }

    function hideConfirm() {
      const modal = document.getElementById('modal-config-confirm');
      if (modal) {
        modal.classList.add('hidden');
        modal.classList.remove('flex');
      }
      confirmCallback = null;
    }

    // Event listeners para modales
    document.getElementById('modal-config-success-ok')?.addEventListener('click', () => {
      const modal = document.getElementById('modal-config-success');
      if (modal) {
        modal.classList.add('hidden');
        modal.classList.remove('flex');
      }
    });

    document.getElementById('modal-config-error-ok')?.addEventListener('click', () => {
      const modal = document.getElementById('modal-config-error');
      if (modal) {
        modal.classList.add('hidden');
        modal.classList.remove('flex');
      }
    });

    document.getElementById('modal-config-confirm-yes')?.addEventListener('click', () => {
      hideConfirm();
      if (confirmCallback) {
        confirmCallback();
      }
    });

    document.getElementById('modal-config-confirm-no')?.addEventListener('click', () => {
      hideConfirm();
    });

    // Funciones para modal de editar rol
    function showModalEditarRol() {
      const modal = document.getElementById('modal-editar-rol');
      if (modal) {
        modal.classList.remove('hidden');
        modal.classList.add('flex');
      }
    }

    function hideModalEditarRol() {
      const modal = document.getElementById('modal-editar-rol');
      if (modal) {
        modal.classList.add('hidden');
        modal.classList.remove('flex');
      }
    }

    document.getElementById('modal-editar-rol-close')?.addEventListener('click', hideModalEditarRol);
    document.getElementById('btn-cancelar-editar-rol')?.addEventListener('click', hideModalEditarRol);

    // Submit del formulario de editar rol
    document.getElementById('form-editar-rol')?.addEventListener('submit', (e) => {
      e.preventDefault();
      
      const usuarioId = (document.getElementById('editar-rol-usuario-id') as HTMLInputElement).value;
      const nuevoRol = (document.getElementById('editar-rol-nuevo-rol') as HTMLSelectElement).value;
      
      if (!usuarioId || !nuevoRol) return;

      const usuarios = JSON.parse(localStorage.getItem('scm_usuarios') || '[]');
      const usuario = usuarios.find((u: any) => u.id === usuarioId);
      
      if (usuario) {
        usuario.rol = nuevoRol;
        localStorage.setItem('scm_usuarios', JSON.stringify(usuarios));
        renderUsuarios();
        hideModalEditarRol();
        showSuccess('Rol actualizado correctamente');
      }
    });

    // GestiÃ³n de pestaÃ±as
    const tabs = document.querySelectorAll('.tab-button');
    const contents = document.querySelectorAll('.tab-content');

    tabs.forEach(tab => {
      tab.addEventListener('click', () => {
        const targetId = tab.id.replace('tab-', 'content-');
        
        // Desactivar todas las pestaÃ±as
        tabs.forEach(t => {
          t.classList.remove('active', 'border-blue-600', 'text-blue-600');
          t.classList.add('border-transparent', 'text-gray-500');
        });
        
        // Activar pestaÃ±a actual
        tab.classList.add('active', 'border-blue-600', 'text-blue-600');
        tab.classList.remove('border-transparent', 'text-gray-500');
        
        // Ocultar todos los contenidos
        contents.forEach(content => content.classList.add('hidden'));
        
        // Mostrar contenido actual
        document.getElementById(targetId)?.classList.remove('hidden');
      });
    });

    // Datos mock de usuarios
    const usuarios = [
      { id: '1', nombre: 'Juan PÃ©rez', email: 'juan@empresa.com', rol: 'ADMIN' },
      { id: '2', nombre: 'MarÃ­a GarcÃ­a', email: 'maria@empresa.com', rol: 'GESTOR' },
      { id: '3', nombre: 'Carlos LÃ³pez', email: 'carlos@empresa.com', rol: 'CONSULTOR' },
      { id: '4', nombre: 'Ana MartÃ­nez', email: 'ana@empresa.com', rol: 'OPERADOR' }
    ];

    // Guardar usuarios en localStorage
    if (!localStorage.getItem('scm_usuarios')) {
      localStorage.setItem('scm_usuarios', JSON.stringify(usuarios));
    }

    // Renderizar tabla de usuarios
    function renderUsuarios() {
      const tbody = document.getElementById('tabla-usuarios');
      if (!tbody) return;

      const usuarios = JSON.parse(localStorage.getItem('scm_usuarios') || '[]');
      tbody.innerHTML = '';

      usuarios.forEach((usuario: any) => {
        const tr = document.createElement('tr');
        tr.className = 'hover:bg-blue-50 transition';
        
        const rolIcon: Record<string, string> = {
          'ADMIN': 'ğŸ‘‘',
          'GESTOR': 'ğŸ“Š',
          'CONSULTOR': 'ğŸ‘ï¸',
          'OPERADOR': 'ğŸ”§'
        };

        const rolColor: Record<string, string> = {
          'ADMIN': 'bg-purple-100 text-purple-800',
          'GESTOR': 'bg-green-100 text-green-800',
          'CONSULTOR': 'bg-blue-100 text-blue-800',
          'OPERADOR': 'bg-orange-100 text-orange-800'
        };

        tr.innerHTML = `
          <td class="px-6 py-4 text-sm font-medium text-gray-900">${usuario.nombre}</td>
          <td class="px-6 py-4 text-sm text-gray-600">${usuario.email}</td>
          <td class="px-6 py-4 text-sm">
            <span class="px-3 py-1 rounded-full text-xs font-semibold ${rolColor[usuario.rol]}">
              ${rolIcon[usuario.rol]} ${usuario.rol}
            </span>
          </td>
          <td class="px-6 py-4 text-sm">
            <button class="btn-editar-usuario text-blue-600 hover:text-blue-800 font-semibold" data-id="${usuario.id}">
              Editar
            </button>
          </td>
        `;
        tbody.appendChild(tr);
      });

      // Event listeners para editar
      document.querySelectorAll('.btn-editar-usuario').forEach(btn => {
        btn.addEventListener('click', (e) => {
          const id = (e.target as HTMLElement).getAttribute('data-id');
          const usuario = usuarios.find((u: any) => u.id === id);
          if (usuario) {
            // Llenar el modal con los datos del usuario
            (document.getElementById('editar-rol-usuario-id') as HTMLInputElement).value = usuario.id;
            (document.getElementById('editar-rol-usuario-nombre') as HTMLInputElement).value = usuario.nombre;
            (document.getElementById('editar-rol-nuevo-rol') as HTMLSelectElement).value = usuario.rol;
            
            // Mostrar el modal
            showModalEditarRol();
