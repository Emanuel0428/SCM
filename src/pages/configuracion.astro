---
import Layout from '../layouts/Layout.astro';
---
<Layout>
  <div class="flex flex-col items-center justify-center min-h-[70vh] w-full">
    <h1 class="text-4xl font-extrabold mb-8 text-blue-900 text-center drop-shadow">Configuración</h1>
    <div class="bg-white/80 backdrop-blur rounded-xl shadow-lg p-8 max-w-xl w-full">
      <p class="text-blue-900 mb-6 text-center">Opciones de configuración del sistema.</p>
      <ul class="list-disc ml-6 text-blue-800 space-y-2">
        <li>Gestión de usuarios</li>
        <li>Categorías de productos</li>
        <li>Ubicaciones</li>
        <li>Notificaciones</li>
        <li>Permisos y roles</li>
        <li>Integraciones</li>
      </ul>
    </div>
  </div>
</Layout>
