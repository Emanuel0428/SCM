---
import Layout from '../layouts/Layout.astro';
---
<Layout>
  <div class="flex flex-col w-full p-6 gap-6">
    <h1 class="text-4xl font-extrabold text-blue-900 drop-shadow">‚öôÔ∏è Configuraci√≥n del Sistema</h1>
    
    <!-- Pesta√±as -->
    <div class="bg-white/90 rounded-xl shadow-lg overflow-hidden">
      <div class="border-b border-gray-200">
        <nav class="flex -mb-px">
          <button 
            id="tab-perfil" 
            class="tab-button active flex-1 px-6 py-4 text-sm font-semibold border-b-2 border-blue-600 text-blue-600 hover:text-blue-700 transition"
          >
            Perfil de Usuario
          </button>
          <button 
            id="tab-empresa" 
            class="tab-button flex-1 px-6 py-4 text-sm font-semibold border-b-2 border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 transition"
          >
            Empresa
          </button>
          <button 
            id="tab-roles" 
            class="tab-button flex-1 px-6 py-4 text-sm font-semibold border-b-2 border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 transition"
          >
            Roles y Permisos
          </button>
          <button 
            id="tab-sistema" 
            class="tab-button flex-1 px-6 py-4 text-sm font-semibold border-b-2 border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 transition"
          >
            Sistema
          </button>
        </nav>
      </div>

      <!-- Contenido de Pesta√±as -->
      <div class="p-6">
        <!-- Tab: Perfil de Usuario -->
        <div id="content-perfil" class="tab-content">
          <h2 class="text-2xl font-bold text-blue-900 mb-6">Informaci√≥n del Perfil</h2>
          <form id="form-perfil" class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="flex flex-col">
              <label class="font-semibold text-blue-900 mb-2">Nombre Completo <span class="text-red-500">*</span></label>
              <input 
                type="text"
                id="nombre-completo"
                value="Usuario Demo"
                required
                class="border-2 border-gray-300 rounded-lg px-4 py-3 focus:ring-2 focus:ring-blue-400 outline-none transition hover:border-gray-400"
                placeholder="Ingrese su nombre completo"
              />
            </div>

            <div class="flex flex-col">
              <label class="font-semibold text-blue-900 mb-2">Email <span class="text-red-500">*</span></label>
              <input 
                type="email"
                id="email"
                value="usuario@empresa.com"
                required
                class="border-2 border-gray-300 rounded-lg px-4 py-3 focus:ring-2 focus:ring-blue-400 outline-none transition hover:border-gray-400"
                placeholder="correo@ejemplo.com"
              />
            </div>

            <div class="flex flex-col">
              <label class="font-semibold text-blue-900 mb-2">Tel√©fono</label>
              <input 
                type="text"
                id="telefono"
                value="+57 300 123 4567"
                class="border-2 border-gray-300 rounded-lg px-4 py-3 focus:ring-2 focus:ring-blue-400 outline-none transition hover:border-gray-400"
                placeholder="+57 300 000 0000"
              />
            </div>

            <div class="flex flex-col">
              <label class="font-semibold text-blue-900 mb-2">Cargo</label>
              <input 
                type="text"
                id="cargo"
                value="Administrador de Sistema"
                class="border-2 border-gray-300 rounded-lg px-4 py-3 focus:ring-2 focus:ring-blue-400 outline-none transition hover:border-gray-400"
                placeholder="Ej: Gerente, Analista, etc."
              />
            </div>

            <div class="col-span-full flex gap-4">
              <button type="submit" class="bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 font-semibold transition shadow-md">
                Guardar Cambios
              </button>
              <button type="button" class="bg-gray-500 text-white px-6 py-3 rounded-lg hover:bg-gray-600 font-semibold transition shadow-md">
                Restablecer
              </button>
            </div>
          </form>
        </div>

        <!-- Tab: Empresa -->
        <div id="content-empresa" class="tab-content hidden">
          <h2 class="text-2xl font-bold text-blue-900 mb-6">Informaci√≥n de la Empresa</h2>
          <form id="form-empresa" class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="flex flex-col">
              <label class="font-semibold text-blue-900 mb-2">Nombre de la Empresa <span class="text-red-500">*</span></label>
              <input 
                type="text"
                id="nombre-empresa"
                value="Empresa Demo"
                required
                class="border-2 border-gray-300 rounded-lg px-4 py-3 focus:ring-2 focus:ring-blue-400 outline-none transition hover:border-gray-400"
              />
            </div>

            <div class="flex flex-col">
              <label class="font-semibold text-blue-900 mb-2">NIT <span class="text-red-500">*</span></label>
              <input 
                type="text"
                id="nit"
                value="900123456-7"
                required
                class="border-2 border-gray-300 rounded-lg px-4 py-3 focus:ring-2 focus:ring-blue-400 outline-none transition hover:border-gray-400"
              />
            </div>

            <div class="flex flex-col col-span-full">
              <label class="font-semibold text-blue-900 mb-2">Direcci√≥n</label>
              <input 
                type="text"
                id="direccion"
                value="Calle 123 #45-67"
                class="border-2 border-gray-300 rounded-lg px-4 py-3 focus:ring-2 focus:ring-blue-400 outline-none transition hover:border-gray-400"
              />
            </div>

            <div class="flex flex-col">
              <label class="font-semibold text-blue-900 mb-2">Ciudad</label>
              <input 
                type="text"
                id="ciudad"
                value="Bucaramanga"
                class="border-2 border-gray-300 rounded-lg px-4 py-3 focus:ring-2 focus:ring-blue-400 outline-none transition hover:border-gray-400"
              />
            </div>

            <div class="flex flex-col">
              <label class="font-semibold text-blue-900 mb-2">Pa√≠s</label>
              <select 
                id="pais"
                class="border-2 border-gray-300 rounded-lg px-4 py-3 focus:ring-2 focus:ring-blue-400 outline-none transition hover:border-gray-400"
              >
                <option value="CO">Colombia</option>
                <option value="MX">M√©xico</option>
                <option value="AR">Argentina</option>
                <option value="CL">Chile</option>
                <option value="PE">Per√∫</option>
              </select>
            </div>

            <div class="col-span-full flex gap-4">
              <button type="submit" class="bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 font-semibold transition shadow-md">
                Guardar Cambios
              </button>
            </div>
          </form>
        </div>

        <!-- Tab: Roles y Permisos -->
        <div id="content-roles" class="tab-content hidden">
          <h2 class="text-2xl font-bold text-blue-900 mb-6">Gesti√≥n de Roles y Permisos</h2>
          
          <!-- Mi Rol Actual -->
          <div class="bg-blue-50 border-2 border-blue-200 rounded-lg p-4 mb-6">
            <div class="flex items-center gap-3 mb-2">
              <span class="text-2xl">üë§</span>
              <div>
                <p class="font-bold text-blue-900">Tu Rol Actual</p>
                <p class="text-blue-700 text-sm">Este es el rol asignado a tu cuenta</p>
              </div>
            </div>
            <div class="mt-3 flex items-center gap-4">
              <select 
                id="mi-rol"
                class="border-2 border-gray-300 rounded-lg px-4 py-3 focus:ring-2 focus:ring-blue-400 outline-none transition hover:border-gray-400 bg-white"
              >
                <option value="ADMIN">üëë Administrador</option>
                <option value="GESTOR">üìä Gestor</option>
                <option value="CONSULTOR">üëÅÔ∏è Consultor</option>
                <option value="OPERADOR">üîß Operador</option>
              </select>
              <button id="btn-cambiar-rol" class="bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 font-semibold transition shadow-md">
                Cambiar Rol
              </button>
            </div>
          </div>

          <!-- Lista de Usuarios y Sus Roles -->
          <h3 class="text-xl font-bold text-blue-900 mb-4">Usuarios del Sistema</h3>
          <div class="overflow-x-auto rounded-lg shadow-md">
            <table class="min-w-full bg-white divide-y divide-gray-200">
              <thead class="bg-gradient-to-r from-blue-600 to-blue-400 text-white">
                <tr>
                  <th class="px-6 py-3 text-left text-sm font-semibold">Usuario</th>
                  <th class="px-6 py-3 text-left text-sm font-semibold">Email</th>
                  <th class="px-6 py-3 text-left text-sm font-semibold">Rol Actual</th>
                  <th class="px-6 py-3 text-left text-sm font-semibold">Acciones</th>
                </tr>
              </thead>
              <tbody id="tabla-usuarios" class="divide-y divide-gray-200">
                <!-- Se llenar√° din√°micamente -->
              </tbody>
            </table>
          </div>

          <!-- Descripci√≥n de Roles -->
          <div class="mt-8 grid grid-cols-1 md:grid-cols-2 gap-4">
            <div class="bg-purple-50 border-2 border-purple-200 rounded-lg p-4">
              <h4 class="font-bold text-purple-900 mb-2">üëë Administrador</h4>
              <p class="text-sm text-purple-700">Acceso total al sistema. Puede gestionar usuarios, configuraci√≥n y todos los m√≥dulos.</p>
            </div>
            <div class="bg-green-50 border-2 border-green-200 rounded-lg p-4">
              <h4 class="font-bold text-green-900 mb-2">üìä Gestor</h4>
              <p class="text-sm text-green-700">Puede crear, editar y eliminar registros. Genera reportes y gestiona inventario.</p>
            </div>
            <div class="bg-blue-50 border-2 border-blue-200 rounded-lg p-4">
              <h4 class="font-bold text-blue-900 mb-2">üëÅÔ∏è Consultor</h4>
              <p class="text-sm text-blue-700">Solo lectura. Puede ver informaci√≥n y generar reportes b√°sicos.</p>
            </div>
            <div class="bg-orange-50 border-2 border-orange-200 rounded-lg p-4">
              <h4 class="font-bold text-orange-900 mb-2">üîß Operador</h4>
              <p class="text-sm text-orange-700">Puede registrar movimientos y actualizar estados de inventario.</p>
            </div>
          </div>
        </div>

        <!-- Tab: Sistema -->
        <div id="content-sistema" class="tab-content hidden">
          <h2 class="text-2xl font-bold text-blue-900 mb-6">Configuraci√≥n del Sistema</h2>
          
          <div class="space-y-6">
            <!-- Notificaciones -->
            <div class="bg-white border-2 border-gray-200 rounded-lg p-6">
              <h3 class="text-lg font-bold text-blue-900 mb-4">üîî Notificaciones</h3>
              <div class="space-y-3">
                <label class="flex items-center gap-3 cursor-pointer">
                  <input type="checkbox" checked class="w-5 h-5 text-blue-600 rounded focus:ring-2 focus:ring-blue-400">
                  <span class="text-gray-700">Notificar cuando el stock sea bajo</span>
                </label>
                <label class="flex items-center gap-3 cursor-pointer">
                  <input type="checkbox" checked class="w-5 h-5 text-blue-600 rounded focus:ring-2 focus:ring-blue-400">
                  <span class="text-gray-700">Notificar movimientos de inventario</span>
                </label>
                <label class="flex items-center gap-3 cursor-pointer">
                  <input type="checkbox" class="w-5 h-5 text-blue-600 rounded focus:ring-2 focus:ring-blue-400">
                  <span class="text-gray-700">Notificar vencimiento de garant√≠as</span>
                </label>
              </div>
            </div>
          </div>
        </div>
      </div>
  </div>

  <script>
    // Gesti√≥n de pesta√±as
    const tabs = document.querySelectorAll('.tab-button');
    const contents = document.querySelectorAll('.tab-content');

    tabs.forEach(tab => {
      tab.addEventListener('click', () => {
        const targetId = tab.id.replace('tab-', 'content-');
        
        // Desactivar todas las pesta√±as
        tabs.forEach(t => {
          t.classList.remove('active', 'border-blue-600', 'text-blue-600');
          t.classList.add('border-transparent', 'text-gray-500');
        });
        
        // Activar pesta√±a actual
        tab.classList.add('active', 'border-blue-600', 'text-blue-600');
        tab.classList.remove('border-transparent', 'text-gray-500');
        
        // Ocultar todos los contenidos
        contents.forEach(content => content.classList.add('hidden'));
        
        // Mostrar contenido actual
        document.getElementById(targetId)?.classList.remove('hidden');
      });
    });

    // Datos mock de usuarios
    const usuarios = [
      { id: '1', nombre: 'Juan P√©rez', email: 'juan@empresa.com', rol: 'ADMIN' },
      { id: '2', nombre: 'Mar√≠a Garc√≠a', email: 'maria@empresa.com', rol: 'GESTOR' },
      { id: '3', nombre: 'Carlos L√≥pez', email: 'carlos@empresa.com', rol: 'CONSULTOR' },
      { id: '4', nombre: 'Ana Mart√≠nez', email: 'ana@empresa.com', rol: 'OPERADOR' }
    ];

    // Guardar usuarios en localStorage
    if (!localStorage.getItem('scm_usuarios')) {
      localStorage.setItem('scm_usuarios', JSON.stringify(usuarios));
    }

    // Renderizar tabla de usuarios
    function renderUsuarios() {
      const tbody = document.getElementById('tabla-usuarios');
      if (!tbody) return;

      const usuarios = JSON.parse(localStorage.getItem('scm_usuarios') || '[]');
      tbody.innerHTML = '';

      usuarios.forEach((usuario: any) => {
        const tr = document.createElement('tr');
        tr.className = 'hover:bg-blue-50 transition';
        
        const rolIcon: Record<string, string> = {
          'ADMIN': 'üëë',
          'GESTOR': 'üìä',
          'CONSULTOR': 'üëÅÔ∏è',
          'OPERADOR': 'üîß'
        };

        const rolColor: Record<string, string> = {
          'ADMIN': 'bg-purple-100 text-purple-800',
          'GESTOR': 'bg-green-100 text-green-800',
          'CONSULTOR': 'bg-blue-100 text-blue-800',
          'OPERADOR': 'bg-orange-100 text-orange-800'
        };

        tr.innerHTML = `
          <td class="px-6 py-4 text-sm font-medium text-gray-900">${usuario.nombre}</td>
          <td class="px-6 py-4 text-sm text-gray-600">${usuario.email}</td>
          <td class="px-6 py-4 text-sm">
            <span class="px-3 py-1 rounded-full text-xs font-semibold ${rolColor[usuario.rol]}">
              ${rolIcon[usuario.rol]} ${usuario.rol}
            </span>
          </td>
          <td class="px-6 py-4 text-sm">
            <button class="btn-editar-usuario text-blue-600 hover:text-blue-800 font-semibold" data-id="${usuario.id}">
              Editar
            </button>
          </td>
        `;
        tbody.appendChild(tr);
      });

      // Event listeners para editar
      document.querySelectorAll('.btn-editar-usuario').forEach(btn => {
        btn.addEventListener('click', (e) => {
          const id = (e.target as HTMLElement).getAttribute('data-id');
          const usuario = usuarios.find((u: any) => u.id === id);
          if (usuario) {
            const nuevoRol = prompt(`Cambiar rol de ${usuario.nombre}:\n\nOpciones: ADMIN, GESTOR, CONSULTOR, OPERADOR`, usuario.rol);
            if (nuevoRol && ['ADMIN', 'GESTOR', 'CONSULTOR', 'OPERADOR'].includes(nuevoRol.toUpperCase())) {
              usuario.rol = nuevoRol.toUpperCase();
              localStorage.setItem('scm_usuarios', JSON.stringify(usuarios));
              renderUsuarios();
              alert('‚úÖ Rol actualizado correctamente');
            }
          }
        });
      });
    }

    renderUsuarios();

    // Cambiar mi rol
    document.getElementById('btn-cambiar-rol')?.addEventListener('click', () => {
      const select = document.getElementById('mi-rol') as HTMLSelectElement;
      const nuevoRol = select.value;
      alert(`‚úÖ Tu rol ha sido cambiado a: ${nuevoRol}\n\nEsta es una simulaci√≥n. En producci√≥n, esto requerir√≠a permisos especiales.`);
    });

    // Form handlers
    document.getElementById('form-perfil')?.addEventListener('submit', (e) => {
      e.preventDefault();
      alert('‚úÖ Perfil actualizado correctamente');
    });

    document.getElementById('form-empresa')?.addEventListener('submit', (e) => {
      e.preventDefault();
      alert('‚úÖ Informaci√≥n de empresa actualizada correctamente');
    });

    // Limpiar cach√©
    document.getElementById('btn-limpiar-cache')?.addEventListener('click', () => {
      if (confirm('¬øEst√°s seguro de limpiar el cach√©? Esto puede eliminar datos temporales.')) {
        alert('‚úÖ Cach√© limpiado correctamente');
      }
    });

    // Exportar datos
    document.getElementById('btn-exportar-datos')?.addEventListener('click', () => {
      const data = {
        activos: JSON.parse(localStorage.getItem('scm_activos') || '[]'),
        movimientos: JSON.parse(localStorage.getItem('scm_movimientos') || '[]'),
        variantes: JSON.parse(localStorage.getItem('scm_variantes') || '[]'),
        usuarios: JSON.parse(localStorage.getItem('scm_usuarios') || '[]')
      };
      
      const dataStr = JSON.stringify(data, null, 2);
      const dataBlob = new Blob([dataStr], { type: 'application/json' });
      const url = URL.createObjectURL(dataBlob);
      const link = document.createElement('a');
      link.href = url;
      link.download = `scm-backup-${new Date().toISOString().split('T')[0]}.json`;
      link.click();
      
      alert('‚úÖ Datos exportados correctamente');
    });

    // Reset datos
    document.getElementById('btn-reset-datos')?.addEventListener('click', () => {
      if (confirm('‚ö†Ô∏è ADVERTENCIA: Esto eliminar√° todos los datos actuales y restaurar√° los datos de prueba iniciales.\n\n¬øEst√°s seguro?')) {
        localStorage.removeItem('scm_activos');
        localStorage.removeItem('scm_movimientos');
        localStorage.removeItem('scm_variantes');
        localStorage.removeItem('scm_usuarios');
        alert('‚úÖ Datos reseteados. La p√°gina se recargar√°.');
        window.location.reload();
      }
    });
  </script>
</Layout>
