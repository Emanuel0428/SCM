---
import Layout from '../layouts/Layout.astro';
import MovimientoCRUD from '../components/MovimientoCRUD.astro';
import CategoriasEgresoChart from '../components/CategoriasEgresoChart.astro';
---
<Layout>
  <div class="flex flex-col w-full p-6 gap-6">
    <div class="flex items-center gap-4">
      <div>
        <h1 class="text-4xl font-extrabold text-blue-900 drop-shadow">Egresos</h1>
        <p class="text-gray-600 text-sm">Gestión de salidas y traslados de inventario</p>
      </div>
    </div>
    
    <div class="bg-orange-50 border-l-4 border-orange-500 p-4 rounded-lg">
      <p class="text-orange-900 font-semibold">ℹ️ Información</p>
      <p class="text-orange-700 text-sm mt-1">
        Registra aquí todas las <strong>SALIDAS</strong> y <strong>TRASLADOS</strong> de productos: ventas, bajas, deterioros, movimientos entre sedes, etc.
      </p>
    </div>
    
    <div class="w-full">
      <MovimientoCRUD tipo="egreso" />
    </div>
  </div>
</Layout>
