---
import Layout from '../layouts/Layout.astro';
import MovimientoCRUD from '../components/MovimientoCRUD.astro';
import CategoriasIngresoChart from '../components/CategoriasIngresoChart.astro';
---
<Layout>
  <div class="flex flex-col w-full p-6 gap-6">
    <div class="flex items-center gap-4">
      <div>
        <h1 class="text-4xl font-extrabold text-blue-900 drop-shadow">Ingresos</h1>
        <p class="text-gray-600 text-sm">Gestión de entradas de inventario al sistema</p>
      </div>
    </div>
    
    <div class="bg-blue-50 border-l-4 border-blue-500 p-4 rounded-lg">
      <p class="text-blue-900 font-semibold">ℹ️ Información</p>
      <p class="text-blue-700 text-sm mt-1">
        Registra aquí todas las <strong>ENTRADAS</strong> de productos al inventario: compras, donaciones, devoluciones de clientes, etc.
      </p>
    </div>
    
    <div class="w-full">
      <MovimientoCRUD tipo="ingreso" />
    </div>
  </div>
</Layout>
